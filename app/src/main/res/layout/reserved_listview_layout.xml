<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    >

    <ImageView
        android:id="@+id/reservedLogoImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/reserved"
        />

    <TextView
    android:id="@+id/reservedTitleText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:text="Conference Space"
    android:textColor="#000"
    android:textSize="18sp"
    app:layout_constraintStart_toEndOf="@id/reservedLogoImage"
    app:layout_constraintTop_toTopOf="@id/reservedLogoImage" />

    <TextView
        android:id="@+id/reservedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:30 PM"
        android:textSize="10sp"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        />

    <TextView
        android:id="@+id/periodText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weekly"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/reservedTitleText"
        app:layout_constraintStart_toStartOf="@id/reservedTitleText"
        />


    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserved"
        android:textSize="14sp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@id/reservedLogoImage"
        app:layout_constraintStart_toStartOf="@id/reservedLogoImage"
        app:layout_constraintTop_toBottomOf="@id/reservedLogoImage"

        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        />


</android.support.constraint.ConstraintLayout>