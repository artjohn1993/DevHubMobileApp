<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000"
    >


    <com.applikeysolutions.cosmocalendar.view.CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        app:currentDayTextColor="@color/colorPrimaryDark"
        app:selectedDayBackgroundColor="@color/colorPrimaryLight"
        app:selectedDayBackgroundStartColor="@color/colorPrimary"
        app:selectedDayBackgroundEndColor="@color/colorPrimaryDark"


        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/calendar_view"
            android:orientation="horizontal"
             android:background="@color/colorPrimaryDark"
            android:gravity="center"
            >
            <Button
                android:id="@+id/dialogCancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:background="@drawable/dialog_button"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="#fff"
                android:layout_marginRight="30dp"

                />
            <Button
                android:id="@+id/dialogConfirmButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_button"
                android:text="Confirm"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="#fff"
                android:layout_marginLeft="30dp"
                />

        </LinearLayout>






</android.support.constraint.ConstraintLayout>